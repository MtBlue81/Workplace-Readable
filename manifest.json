{
    "manifest_version": 2,
    "name": "Workplace Readable",
    "version": "1.6.0",
    "description": "Chrome extension to make Workplace a bit easier to read",
    "icons": {
        "16": "image/icon16.png",
        "48": "image/icon48.png",
        "128": "image/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "image/icon16.png",
            "24": "image/icon24.png",
            "32": "image/icon32.png"
        },
        "default_popup": "html/popup.html"
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "*://*.facebook.com/*"
            ],
            "exclude_matches": [
                "*://www.facebook.com/*"
            ],
            "js": [
                "js/jquery-2.2.4.min.js",
                "js/content.js",
                "js/expand-all.js",
                "js/read-later.js"
            ],
            "css": [
                "css/content.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "image/plus.png",
        "image/minus.png",
        "image/top.png",
        "image/expand.png",
        "image/bookmark.png",
        "image/bookmarked.png"
    ],
    "options_ui": {
        "page": "html/options.html",
        "chrome_style": true
    },
    "homepage_url": "https://github.com/rockwillj/Workplace-Readable",
    "permissions": [
        "*://*.facebook.com/*",
        "storage"
    ]
}
